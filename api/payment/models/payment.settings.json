{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "name": "payment"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "payer_name": {
      "type": "string"
    },
    "payer_phone": {
      "type": "string"
    },
    "paid": {
      "type": "decimal"
    },
    "time": {
      "type": "datetime"
    },
    "order": {
      "via": "payments",
      "model": "order"
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "direct",
        "momo",
        "banking"
      ],
      "default": "direct"
    }
  }
}
