{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "name": "payment",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "paid": {
      "type": "decimal"
    },
    "order": {
      "via": "payments",
      "model": "order"
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "direct",
        "momo",
        "banking"
      ],
      "default": "direct"
    },
    "driver": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "receipt": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "payer_name": {
      "type": "string"
    },
    "payer_phone": {
      "type": "string"
    }
  }
}
