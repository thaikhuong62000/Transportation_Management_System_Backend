{
  "routes": [
    {
      "method": "GET",
      "path": "/orders",
      "handler": "order.find",
      "config": {
        "policies": ["handle-find", "global::pagination", "global::filter-address"]
      }
    },
    {
      "method": "GET",
      "path": "/orders/count",
      "handler": "order.count",
      "config": {
        "policies": ["handle-find"]
      }
    },
    {
      "method": "GET",
      "path": "/orders/delivering",
      "handler": "order.getDeliveringOrder",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/orders/delivered",
      "handler": "order.getDeliveredOrder",
      "config": {
        "policies": [],
        "description": "Get delivered order"
      }
    },
    {
      "method": "GET",
      "path": "/orders/tracing/:id",
      "handler": "order.getOrderTracing",
      "config": {
        "policies": [],
        "description": "Get order's trace through storage, return trace status"
      }
    },
    {
      "method": "GET",
      "path": "/orders/:id",
      "handler": "order.findOne",
      "config": {
        "policies": ["handle-find"]
      }
    },
    {
      "method": "POST",
      "path": "/orders",
      "handler": "order.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/orders/:id",
      "handler": "order.update",
      "config": {
        "policies": ["remove-unaccept-field"]
      }
    },
    {
      "method": "DELETE",
      "path": "/orders/:id",
      "handler": "order.delete",
      "config": {
        "policies": []
      }
    }
  ]
}
