{
  "routes": [
    {
      "method": "POST",
      "path": "/auth/local",
      "handler": "Auth.callback",
      "config": {
        "policies": ["plugins::users-permissions.ratelimit", "plugins::users-permissions.sanitize-userdata"],
        "prefix": "",
        "description": "Login a user using the identifiers email and password",
        "tag": {
          "plugin": "users-permissions",
          "name": "User"
        }
      }
    },
    {
      "method": "GET",
      "path": "/driver/status",
      "handler": "CustomUser.getDriverStatus",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Get current status for Driver's Homepage"
      }
    },
    {
      "method": "GET",
      "path": "/driver/user/:id",
      "handler": "User.getCustomerInfo",
      "config": {
        "policies": [],
        "prefix": ""
      }
    },
    {
      "method": "PUT",
      "path": "/users/avatar",
      "handler": "User.updateAvatar",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Update avatar of an existing user",
        "tag": {
          "plugin": "users-permissions",
          "name": "User",
          "actionType": "update"
        }
      }
    }
  ]
}
