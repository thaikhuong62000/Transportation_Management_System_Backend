{
  "routes": [
    {
      "method": "POST",
      "path": "/auth/local",
      "handler": "Auth.callback",
      "config": {
        "policies": [
          "plugins::users-permissions.ratelimit",
          "plugins::users-permissions.sanitize-userdata"
        ],
        "prefix": "",
        "description": "Login a user using the identifiers email and password",
        "tag": {
          "plugin": "users-permissions",
          "name": "User"
        }
      }
    },
    {
      "method": "GET",
      "path": "/driver/status",
      "handler": "CustomUser.getDriverStatus",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Get current status for Driver's Homepage"
      }
    },
    {
      "method": "POST",
      "path": "/auth/password/update/:id",
      "handler": "User.updatePassword",
      "config": {
        "policies": [],
        "prefix": ""
      }
    },
    {
      "method": "GET",
      "path": "/storekeeper/status",
      "handler": "CustomUser.getStorekeeperStatus",
      "config": {
        "policies": [],
        "prefix": ""
      }
    }
  ]
}
